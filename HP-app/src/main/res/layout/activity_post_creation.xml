<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/md_white"
        android:paddingStart="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_right_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:background="@drawable/selector_create_btn"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="发表"
            android:textColor="@color/selector_create_tv"
            android:textSize="@dimen/sp_12" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/md_black_300"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:typeface="serif"
            tools:text="@string/app_name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="@dimen/dp_10"
            android:text="@string/tips_cancel"
            android:textColor="@color/md_black_300"
            android:textSize="@dimen/sp_14" />

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/md_grey_200" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/post_content_il"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white"
        android:padding="@dimen/dp_10"
        app:counterEnabled="true"
        app:counterMaxLength="120"
        app:counterOverflowTextAppearance="@style/hintError"
        app:errorEnabled="true"
        app:hintEnabled="false">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/post_content_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/hint_post_whatever_you_want_to_share"
            android:lines="8"
            android:textSize="@dimen/sp_14">

            <requestFocus />
        </android.support.v7.widget.AppCompatEditText>
    </android.support.design.widget.TextInputLayout>

    <am.widget.wraplayout.WrapLayout
        android:id="@+id/post_picture_container_wl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white"
        android:padding="@dimen/dp_14"
        app:wlyGravity="top"
        app:wlyHorizontalSpacing="@dimen/dp_40"
        app:wlyVerticalSpacing="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/post_add_picture_ll"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:background="@color/grey_add_picture"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/ic_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/tips_camera_or_gallery"
                android:textColor="#ADADAD"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </am.widget.wraplayout.WrapLayout>


</LinearLayout>