<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/user_center_collapsing_tl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_white"
            android:fitsSystemWindows="true"
            android:paddingBottom="@dimen/dp_10"
            app:contentScrim="@color/md_white"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginStart="72dp"
            app:expandedTitleMarginTop="@dimen/dp_50"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_white"
                android:fitsSystemWindows="true"
                android:minHeight="@dimen/dp_140"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3"
                app:statusBarScrim="@android:color/transparent">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/user_center_icon_iv"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_48"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@mipmap/ic_user_default_photo" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/user_center_attention_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="关注:0"
                    app:layout_constraintBottom_toBottomOf="@+id/user_center_icon_iv"
                    app:layout_constraintStart_toEndOf="@+id/user_center_icon_iv" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/user_center_sub_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/selector_sub_cb"
                    android:button="@null"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_80"
                    android:text="@string/action_not_subscribed"
                    android:textColor="@color/selector_sub_tv"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/user_center_icon_iv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/user_center_icon_iv" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/user_center_edit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/bg_common_circle_btn"
                    android:button="@null"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_80"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/action_edit_user_info"
                    android:textSize="@dimen/sp_14"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/user_center_icon_iv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/user_center_icon_iv" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/user_center_summary_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:maxLines="1"
                    android:text="简介:LIVALL智能骑行头盔套件能实现七大功能:酷炫灯光、音乐播放、一键拍照、对讲接打、数据统计、社区分享、SOS报警。LIVALL专注于智能骑行装备和碳纤维智能自行车，为您提供高品质的安全骑行"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/user_center_arrow_iv"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_center_icon_iv" />


                <com.graduation.hp.widget.TriangleView
                    android:id="@+id/user_center_arrow_iv"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_center_icon_iv" />

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/toolbar_left_btn"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="start"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/ic_navigation_back" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/view_base_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/view_show_loading" />

            <include layout="@layout/view_show_error" />

            <LinearLayout
                android:id="@+id/view_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginTop="@dimen/dp_50"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:orientation="vertical"> <!-- 避免状态透明上移 -->

                <ImageView
                    android:id="@+id/empty_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_empty_comment"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/empty_tv"
                    style="@style/Button.Green"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/tips_empty_post_list" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/view_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:overScrollMode="never" />

        </FrameLayout>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</android.support.design.widget.CoordinatorLayout>