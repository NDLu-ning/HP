<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/view_progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


    </LinearLayout>

    <include
        layout="@layout/view_show_error"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/view_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"> <!-- 避免状态透明上移 -->

        <ImageView
            android:id="@+id/empty_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_empty_comment" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/empty_tv"
            style="@style/Button.Green"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/tips_empty_post_list" />
    </LinearLayout>

    <include layout="@layout/view_base_xlist" />
</FrameLayout>