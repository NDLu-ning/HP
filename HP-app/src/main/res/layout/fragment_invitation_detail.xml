<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:orientation="vertical">

        <include layout="@layout/view_toolbar_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/md_grey_100" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/invitation_detail_scroll_nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:descendantFocusability="blocksDescendants"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/view_show_loading" />

                <LinearLayout
                    android:id="@+id/view_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"> <!-- 避免状态透明上移 -->

                    <ImageView
                        android:id="@+id/error_iv"
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_200"
                        android:src="@mipmap/ic_empty" />

                    <Button
                        android:id="@+id/error_retry"
                        style="@style/Button.Green"
                        android:gravity="center"
                        android:text="@string/tips_retry" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/view_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/dp_180"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_6"
                    android:visibility="visible">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="@color/md_white"
                        android:paddingBottom="@dimen/dp_6">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/adapter_post_icon_iv"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_12"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:src="@mipmap/ic_user_default_photo" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/adapter_post_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textColor="@color/md_black"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintStart_toEndOf="@+id/adapter_post_icon_iv"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="来啊LIVALL" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/adapter_post_tag_tv"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginStart="@dimen/dp_20"
                            android:background="@drawable/healthy_yang_xu_tag"
                            android:gravity="center"
                            android:textColor="@color/md_white"
                            android:textSize="8sp"
                            app:layout_constraintBottom_toTopOf="@id/adapter_post_content_tv"
                            app:layout_constraintStart_toEndOf="@+id/adapter_post_name_tv"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="良好" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/adapter_post_hot_iv"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:src="@mipmap/ic_hot_64"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/adapter_post_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_8"
                            android:textColor="@color/md_grey_500"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintBottom_toBottomOf="@+id/adapter_post_icon_iv"
                            app:layout_constraintStart_toEndOf="@+id/adapter_post_icon_iv"
                            app:layout_constraintTop_toBottomOf="@+id/adapter_post_name_tv"
                            tools:text="2天前" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/adapter_post_content_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:paddingStart="@dimen/dp_12"
                            android:paddingEnd="@dimen/dp_12"
                            android:textColor="@color/md_black_300"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_icon_iv"
                            tools:text="章子怡妆前妆后差距大，素颜吓呆众人，与梅婷相比甚远" />

                        <com.lzy.ninegrid.NineGridView
                            android:id="@+id/adapter_post_image_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:paddingStart="@dimen/dp_12"
                            android:paddingEnd="@dimen/dp_12"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_content_tv"
                            app:ngv_gridSpacing="3dp"
                            app:ngv_maxSize="9"
                            app:ngv_mode="grid"
                            app:ngv_singleImageRatio="1"
                            app:ngv_singleImageSize="250dp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/adapter_post_reviews_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintBottom_toTopOf="@id/line"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_image_container"
                            tools:text="游览24次" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/adapter_post_comment_iv"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:src="@mipmap/ic_comment_48"
                            app:layout_constraintBottom_toBottomOf="@id/line"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_image_container" />

                        <com.graduation.hp.widget.LikeButton
                            android:id="@+id/adapter_post_like_btn"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:scaleType="centerInside"
                            android:layout_marginEnd="@dimen/dp_40"
                            android:src="@drawable/selector_unliked_btn"
                            app:layout_constraintBottom_toBottomOf="@id/line"
                            app:layout_constraintEnd_toStartOf="@id/adapter_post_comment_iv"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_image_container" />

                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:background="@color/md_grey_200"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_comment_iv"
                            />


                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/adapter_post_like_num_iv"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_8"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/line"
                            app:srcCompat="@drawable/ic_like_deep_blue" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/adapter_post_like_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_12"
                            android:paddingEnd="@dimen/dp_12"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_like_num_iv"
                            app:layout_constraintStart_toEndOf="@id/adapter_post_like_num_iv"
                            app:layout_constraintBottom_toTopOf="@id/adapter_post_like_num_iv"
                            tools:text="3人觉得很赞" />

                        <LinearLayout
                            android:id="@+id/adapter_post_comment_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/dp_12"
                            android:paddingEnd="@dimen/dp_12"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_like_num_tv"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/adapter_post_empty_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:background="@color/md_grey_100"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="@string/tips_empty"
                            android:textColor="@color/md_blue_grey_600"
                            android:textSize="@dimen/sp_14"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/adapter_post_comment_container"
                            tools:visibility="visible" />

                    </android.support.constraint.ConstraintLayout>

                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/invitation_detail_comment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/invitation_detail_comment_iv_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom"
        android:background="@color/md_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/md_grey_100"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/invitation_detail_comment_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@drawable/bg_common_input_et"
            android:gravity="center_vertical"
            android:hint="@string/hint_write_comment"
            android:paddingStart="@dimen/dp_12"
            android:typeface="serif"
            app:layout_constraintEnd_toStartOf="@id/invitation_detail_comment_iv"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/invitation_detail_comment_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/invitation_detail_sub_iv"
            app:layout_constraintStart_toEndOf="@id/invitation_detail_comment_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/invitation_detail_comment_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_down_tv"
            android:textColor="@color/md_white"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@id/invitation_detail_comment_iv"
            app:layout_constraintEnd_toEndOf="@id/invitation_detail_comment_iv"
            tools:text="10" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/invitation_detail_sub_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_not_focus_on"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/invitation_detail_share_iv"
            app:layout_constraintStart_toEndOf="@id/invitation_detail_comment_iv"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/invitation_detail_share_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_20"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/invitation_detail_sub_iv"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>