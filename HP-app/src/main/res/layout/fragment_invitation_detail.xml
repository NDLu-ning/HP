<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:orientation="vertical">

        <include layout="@layout/view_toolbar_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/md_grey_100" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/invitation_detail_scroll_nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:descendantFocusability="blocksDescendants"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/view_show_loading" />

                <LinearLayout
                    android:id="@+id/view_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"> <!-- 避免状态透明上移 -->

                    <ImageView
                        android:id="@+id/error_iv"
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_200"
                        android:src="@mipmap/ic_empty" />

                    <Button
                        android:id="@+id/error_retry"
                        style="@style/Button.Green"
                        android:gravity="center"
                        android:text="@string/tips_retry" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/view_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/dp_180"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_6"
                    android:visibility="visible">

                    <include layout="@layout/adapter_post_multi_item"/>

                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/invitation_detail_comment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/invitation_detail_comment_iv_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom"
        android:background="@color/md_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/md_grey_100"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/invitation_detail_comment_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@drawable/bg_common_input_et"
            android:gravity="center_vertical"
            android:hint="@string/hint_write_comment"
            android:paddingStart="@dimen/dp_12"
            android:typeface="serif"
            app:layout_constraintEnd_toStartOf="@id/invitation_detail_comment_iv"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/invitation_detail_comment_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/invitation_detail_sub_iv"
            app:layout_constraintStart_toEndOf="@id/invitation_detail_comment_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/invitation_detail_comment_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_down_tv"
            android:textColor="@color/md_white"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@id/invitation_detail_comment_iv"
            app:layout_constraintEnd_toEndOf="@id/invitation_detail_comment_iv"
            tools:text="10" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/invitation_detail_sub_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_not_focus_on"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/invitation_detail_share_iv"
            app:layout_constraintStart_toEndOf="@id/invitation_detail_comment_iv"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/invitation_detail_share_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_20"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/invitation_detail_sub_iv"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>