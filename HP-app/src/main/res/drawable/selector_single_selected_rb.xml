<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <corners android:radius="@dimen/dp_30" />
            <solid android:color="@color/bg_answer_selected_color" />
            <stroke android:color="@color/bg_answer_selected_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners android:radius="@dimen/dp_30" />
            <solid android:color="@color/md_white" />
            <stroke android:color="@color/bg_answer_stroke_color" />
        </shape>
    </item>
</selector>